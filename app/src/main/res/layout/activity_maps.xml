<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.veilevil.mapapplication.MapsActivity" />

    <Spinner
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/main_menu"
        android:layout_gravity="left|top"
        android:spinnerMode="dropdown"
        android:background="@drawable/dropdown_menu"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:id="@+id/traceButton"
        android:layout_gravity="right|top"
        android:src="@drawable/button1"
        android:layout_marginRight="5dp"
        android:onClick="onTraceClick"
        android:contentDescription="test" />

    <TextView android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#cfcfcf"
        android:id="@+id/searchBox">

        <Button
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/ic_menu_search"
            android:onClick="drawRouteClick"
            android:backgroundTint="#000000" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal|top"
            android:background="#ffffff"
            android:layout_marginRight="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:textSize="13dp"
            android:textIsSelectable="false" />

        <Spinner
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/selector1"
            android:background="#ffffff"
            android:layout_gravity="left|top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ffffff"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="64dp"
            android:textSize="13dp"
            android:textIsSelectable="false" />

        <Spinner
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/selector2"
            android:background="#ffffff"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:spinnerMode="dropdown"
            />

    </FrameLayout>

</FrameLayout>

